<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/progress_bar_custom.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background layer (empty progress) -->
    <item android:id="@android:id/background">
        <bitmap
            android:src="@drawable/progressbarempty"
            android:gravity="center" />
    </item>

    <!-- Progress layer (full progress) -->
    <item android:id="@android:id/progress">
        <clip>
            <bitmap
                android:src="@drawable/progressbarfull"
                android:gravity="center" />
        </clip>
    </item>

</layer-list>
