<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ipt.walkingsensor.LoginActivity">

    <ImageView
        android:id="@+id/BackgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#B50000"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/landingimage" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


       <!-- <EditText
            android:id="@+id/PasswordText"
            android:layout_width="265dp"
            android:layout_height="58dp"
            android:layout_below="@+id/textViewPasswaord"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="74dp"
            android:ems="10"
            android:hint="12345"
            android:inputType="textPassword"
            app:layout_constraintHorizontal_bias="0.486" />-->

        <TextView
            android:id="@+id/textViewUserEmail"
            android:layout_width="118dp"
            android:layout_height="28dp"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/name_emailText"
            android:layout_marginTop="37dp"
            android:text="Username/Email:"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/name_emailText"
            app:layout_constraintHorizontal_bias="0.294"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textViewPasswaord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_emailText"
            android:layout_marginTop="34dp"
            android:layout_alignStart="@+id/etPasswordLayout"
            android:text="Password:"
            android:textColor="#FFFFFF"
            app:layout_constraintHorizontal_bias="0.10" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etPasswordLayout"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewPasswaord"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/PasswordLoginInput"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_below="@+id/name_emailText"
                android:background="#FFFFFF"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/name_emailText"
            android:layout_width="267dp"
            android:layout_height="57dp"
            android:layout_below="@+id/textViewUserEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPasswordLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:layout_marginBottom="16dp"
            android:text="Login"
            app:layout_constraintHorizontal_bias="0.479" />

        <Button
            android:id="@+id/voltarButtLog"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginButton"
            android:layout_centerHorizontal="true"
            android:text="Voltar"
            app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="218dp"
            android:layout_height="83dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="65dp"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="50sp" />

    </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>